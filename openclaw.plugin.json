{
  "id": "myo",
  "name": "Myo",
  "description": "Myo plugin for OpenClaw: connect to myo.ai, sync projects/tasks/memory/jobs, and run work with full context.",
  "version": "0.0.1",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "apiBaseUrl": { "type": "string", "default": "https://myo.ai" },
      "apiKey": { "type": "string" },
      "rootDir": { "type": "string", "default": "~/clawd/mission-control" }
    }
  },
  "uiHints": {
    "enabled": { "label": "Enabled" },
    "apiBaseUrl": { "label": "Myo API Base URL" },
    "apiKey": { "label": "Myo API Key", "sensitive": true },
    "rootDir": { "label": "Root Directory" }
  }
}
